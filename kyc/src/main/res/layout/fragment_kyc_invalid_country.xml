<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_view_cityscape"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginLeft="48dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/vector_city_scape" />

    <TextView
        android:id="@+id/text_view_kyc_invalid_country_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:textSize="16sp"
        android:fontFamily="@font/montserrat_semi_bold"
        android:text="@string/kyc_invalid_country_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_view_cityscape" />

    <TextView
        android:id="@+id/text_view_kyc_invalid_country_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="32dp"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:text="@string/kyc_invalid_country_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_kyc_invalid_country_header" />

    <Button
        android:id="@+id/button_kyc_invalid_country_message_me"
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginRight="32dp"
        android:text="@string/kyc_invalid_country_message_me"
        android:theme="@style/ButtonLightBlueTheme"
        app:layout_constraintBottom_toTopOf="@+id/text_view_kyc_no_thanks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_kyc_invalid_country_message"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/text_view_kyc_no_thanks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_marginRight="32dp"
        android:padding="8dp"
        android:theme="@style/PlainTheme"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:fontFamily="@font/montserrat"
        android:text="@string/kyc_invalid_country_no_thanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>