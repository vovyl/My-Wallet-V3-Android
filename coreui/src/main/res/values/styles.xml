<resources>

    <style name="AppTheme" parent="BaseTheme">
        <!-- <v21 specific stuff here -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PlainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- No colors defined here for default styling on AlertDialog buttons -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Common styles across all res qualifiers resides here, anything specific can inherit from this -->
        <item name="colorPrimary">@color/primary_navy_medium</item>
        <item name="colorPrimaryDark">@color/primary_navy_dark</item>
        <item name="colorAccent">@color/primary_blue_accent</item>

        <item name="android:textColorPrimary">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary_navy_medium</item>

        <item name="colorControlActivated">@color/primary_blue_accent</item>
        <item name="colorControlHighlight">@color/primary_blue_accent</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/primary_blue_accent</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary_blue_accent</item>
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <style name="DefaultCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:theme">@style/PlainTheme</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/white</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <!-- Using a style to apply the font as it doesn't work in Themes -->
    <style name="ButtonStyle">
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="LightBlueButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Disabled colour -->
        <item name="colorButtonNormal">@color/primary_gray_dark</item>
        <!-- Enabled colour -->
        <item name="colorControlHighlight">@color/primary_navy_medium</item>
        <!-- Fonts -->
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <style name="WhiteButtonTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/primary_gray_dark</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textColor">@color/primary_navy_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Colored</item>
    </style>

    <!-- Using a Theme to apply the button color as it doesn't work in Styles -->
    <style name="ButtonGreenTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/product_green_medium</item>
        <item name="colorControlHighlight">@color/product_green_received</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- {@deprecated Use LightBlueButtonTheme instead} -->
    <style name="ButtonLightBlueTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_blue_accent</item>
        <item name="colorControlHighlight">@color/primary_navy_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonBlueTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_navy_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ButtonRedTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/product_red_medium</item>
        <item name="colorControlHighlight">@color/secondary_red_light</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TransparentBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FullscreenDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="DialogNoAnimations">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

    <style name="MinBalanceExplanationTextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF505050</item>
        <item name="android:fontFamily">@font/montserrat</item>
    </style>

    <style name="MinBalanceExplanationTextStyle.Bold">
        <item name="android:fontFamily">@font/montserrat_semi_bold</item>
    </style>

</resources>